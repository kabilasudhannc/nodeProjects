<div class="book-container">
    <% if (locals.data) { %>
        <% for (book of data) {%>
            <a href="/book/<%= book.id %>" class="book" id="<%= book.id %>">
                <img src='<%= book.bookcover %>' alt="bookCover" class="bookCover">
                <h2 class="bookTitle"><%= book.title %> - <%= book.author %></h2>
                <div>
                    <p class="readOn"><span class="bold">Date Read:</span> <span class="read_on"><%= book.created_at %></span></p>
                    <p class="rating"><span class="bold">Rating:</span> <%= book.rating %></p>
                </div>
                <p class="description"><%= book.description %></p>
            </a>

            <hr>
        <% } %>
    <% } else { %>
        <%= data.error %>
    <% } %>
</div>

